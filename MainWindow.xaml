<Window x:Class="HomeWork4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork4"   
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="400" MinWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Режем торт" TextWrapping="Wrap" TextAlignment="Center"/>
        <Label Content="A:" Grid.Column="1"/>
        <TextBox x:Name="Z1A" Grid.Column="2" Text="0"/>
        <Button  x:Name="Z1R" Content="Посчитать" Grid.Column="4" Grid.ColumnSpan="999" Click="Z1R_Click"/>

        <TextBlock Text="Шашматная доска" TextWrapping="Wrap" TextAlignment="Center" Grid.Row="1"/>
        <Label Content="X:" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Y:" Grid.Column="3" Grid.Row="1"/>
        <Label Content="X1:" Grid.Column="5" Grid.Row="1"/>
        <Label Content="Y1:" Grid.Column="7" Grid.Row="1"/>
        <TextBox x:Name="Z2X" Grid.Column="2" Text="0" Grid.Row="1"/>
        <TextBox x:Name="Z2Y" Grid.Column="4" Text="0" Grid.Row="1"/>
        <TextBox x:Name="Z2Z" Grid.Column="6" Text="0" Grid.Row="1"/>
        <TextBox x:Name="Z2W" Grid.Column="8" Text="0" Grid.Row="1"/>
        <Button  x:Name="Z2R" Content="Посчитать" Grid.Column="9" Grid.ColumnSpan="999" Grid.Row="1" Click="Z2R_Click"/>

        <TextBlock Text="Выгоняем Яшу из бассейна" TextWrapping="Wrap" TextAlignment="Center" Grid.Row="2"/>
        <Label Content="K:" Grid.Column="1" Grid.Row="2"/>
        <Label Content="L:" Grid.Column="3" Grid.Row="2"/>
        <Label Content="M:" Grid.Column="5" Grid.Row="2"/>
        <Label Content="N:" Grid.Column="7" Grid.Row="2"/>
        <TextBox x:Name="Z3K" Grid.Column="2" Text="0" Grid.Row="2"/>
        <TextBox x:Name="Z3L" Grid.Column="4" Text="0" Grid.Row="2"/>
        <TextBox x:Name="Z3M" Grid.Column="6" Text="0" Grid.Row="2"/>
        <TextBox x:Name="Z3N" Grid.Column="8" Text="0" Grid.Row="2"/>
        <Button  x:Name="Z3R" Content="Посчитать" Grid.Column="9" Grid.ColumnSpan="999" Grid.Row="2" Click="Z3R_Click"/>

        <TextBlock Text="Задачка про узника замка Иф" TextWrapping="Wrap" TextAlignment="Center" Grid.Row="3"/>
        <Label Content="A:" Grid.Column="1" Grid.Row="3"/>
        <Label Content="B:" Grid.Column="3" Grid.Row="3"/>
        <Label Content="C:" Grid.Column="5" Grid.Row="3"/>
        <Label Content="D:" Grid.Column="7" Grid.Row="3"/>
        <Label Content="E:" Grid.Column="9" Grid.Row="3"/>
        <TextBox x:Name="Z4A" Grid.Column="2" Text="0" Grid.Row="3"/>
        <TextBox x:Name="Z4B" Grid.Column="4" Text="0" Grid.Row="3"/>
        <TextBox x:Name="Z4C" Grid.Column="6" Text="0" Grid.Row="3"/>
        <TextBox x:Name="Z4D" Grid.Column="8" Text="0" Grid.Row="3"/>
        <TextBox x:Name="Z4E" Grid.Column="10" Text="0" Grid.Row="3"/>
        <Button  x:Name="Z4R" Content="Посчитать" Grid.Column="11" Grid.ColumnSpan="999" Grid.Row="3" Click="Z4R_Click"/>

        <TextBlock Text="Апельсины бочками" TextWrapping="Wrap" TextAlignment="Center" Grid.Row="4"/>
        <Label Content="N:" Grid.Column="1" Grid.Row="4"/>
        <TextBox x:Name="Z5A" Grid.Column="2" Text="0" Grid.Row="4"/>
        <Button  x:Name="Z5R" Content="Криво перевести" Grid.Column="4" Grid.ColumnSpan="999" Grid.Row="4" Click="Z5R_Click"/>
    </Grid>
</Window>
